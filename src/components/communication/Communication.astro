---
import PublicationItem from './PublicationItem.astro'
import PatentItem from './PatentItem.astro'
import MediaItem from './MediaItem.astro'
import SectionTitleLayout from '../../layouts/SectionTitleLayout.astro'
---

<section id="communication" class="py-16 sm:py-20 relative overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-white"></div>
  <div
    class="absolute top-0 left-0 w-96 h-96 bg-primary/10 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"
  >
  </div>
  <div
    class="absolute bottom-0 right-0 w-96 h-96 bg-accent/10 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"
  >
  </div>

  <div class="max-w-7xl mx-auto px-4 relative">
    <SectionTitleLayout
      title="Latest Updates & Research"
      subtitle="Explore our scientific publications, patents, and media coverage"
    />

    <div class="grid lg:grid-cols-3 gap-12">
      <!-- Publications -->
      <div class="relative">
        <div class="sticky top-24">
          <h3 class="font-roboto text-xl mb-4">Publications</h3>
          <div class="h-px bg-gray-300 mb-6"></div>
          <ul class="space-y-8">
            <PublicationItem
              title="3D-Printed Osteoinductive Polymeric Scaffolds with Optimized Architecture to Repair a Sheep Metatarsal Critical-Size Bone Defect."
              doi="10.1002/a-hm.202301692"
            />
            <PublicationItem
              title="Additive Manufacturing of Material Scaffolds for Bone Regeneration: Toward Application in the Clinics."
              doi="10.1002/adfm.202006967"
            />
            <PublicationItem
              title="3D-printed scaffold combined to 2D osteoinductive coatings to repair a critical-size mandibular bone defect."
              doi="10.1016/j.mtbio.2021.100113"
            />
            <PublicationItem
              title="Surface delivery of tunable doses of BMP-2 from an adaptable polymeric scaffold induces volumetric bone regeneration."
              doi="10.1016/j.biomaterials.2016.06.001"
            />
          </ul>
        </div>
      </div>

      <!-- Patents -->
      <div class="relative">
        <div class="sticky top-24">
          <h3 class="font-roboto text-xl mb-4">Patents</h3>
          <div class="h-px bg-gray-300 mb-6"></div>
          <ul class="space-y-8">
            <PatentItem
              title="Implantable medical device for bone repair."
              number="WO2022063771A1"
            />
            <PatentItem
              title="Process for preparing a surface coated by crosslinked polyelectrolyte multilayer films as a biomimetic reservoir for proteins."
              number="WO2010081884A2"
            />
          </ul>
        </div>
      </div>

      <!-- Communications -->
      <div class="relative">
        <div class="sticky top-24">
          <h3 class="font-roboto text-xl mb-4">Media Coverage</h3>
          <div class="h-px bg-gray-300 mb-6"></div>
          <ul class="space-y-6">
            <MediaItem
              type="Press release"
              linkTitle="Le Monde"
              linkUrl="toto.fr"
            />
            <MediaItem
              type="Press release"
              linkTitle="blog CNRS"
              linkUrl="toto.fr"
            />
            <MediaItem
              type="Podcast"
              linkTitle="La chronique SantÃ© de Thierry Lhermitte"
              linkUrl="toto.fr"
            />
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
