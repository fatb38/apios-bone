---
interface Props {
  title: string
  number: string
  linkUrl: string
}

const { title, number, linkUrl } = Astro.props
---

<li class="mb-6">
  <p class="mb-2">{title}</p>
  <a
    href={linkUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="text-primary hover:text-primary/80 text-sm inline-flex items-center gap-1"
  >
    {number}
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
      ></path>
    </svg>
  </a>
</li>
