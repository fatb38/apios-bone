---
interface Props {
  icon: string
  title: string
  description: string
}

const { icon, title, description } = Astro.props
---

<div
  class="bg-white rounded-xl sm:rounded-2xl p-6 sm:p-8 hover:shadow-lg transition-all hover:-translate-y-1 border-2 border-primary/20 hover:border-primary/40"
>
  <div class="text-primary text-3xl sm:text-4xl mb-3 sm:mb-4">{icon}</div>
  <h3 class="font-roboto font-semibold text-lg sm:text-xl mb-2 sm:mb-4">
    {title}
  </h3>
  <p class="text-gray-600 text-sm sm:text-base">{description}</p>
</div>
