---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
export interface Props {
  name: string
  photo: ImageMetadata
  position: string
  email?: string
  extraJob?: string
  isCofounder?: boolean
  linkedIn?: string
}

const { name, position, email, linkedIn, photo, isCofounder, extraJob } =
  Astro.props
---

<div class="text-center group">
  <div class="relative mb-4 mx-auto w-40 h-40">
    <Image
      src={photo}
      alt={name}
      class="w-40 h-40 rounded-full object-cover border-2 border-primary/40"
      loading="lazy"
    />
    <!-- Desktop hover overlay (hidden on mobile) -->
    <div
      class="absolute inset-0 bg-black/60 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300 hidden md:flex md:items-center md:justify-center"
    >
      <div class="flex items-center justify-center gap-4">
        {
          email && (
            <a
              href={`mailto:${email}`}
              class="text-white hover:text-primary transition-colors"
              aria-label={`Email ${name}`}
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
              </svg>
            </a>
          )
        }
        {
          linkedIn && (
            <a
              href={linkedIn}
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:text-primary transition-colors"
              aria-label={`${name}'s linkedIn profile`}
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
              </svg>
            </a>
          )
        }
      </div>
    </div>
  </div>

  <div class="space-y-2">
    <h3 class="font-roboto font-semibold text-lg">{name}</h3>
    <p class="text-gray-600">{position}<br />{extraJob}</p>
    {
      isCofounder && (
        <span class="inline-block text-sm text-primary font-medium">
          Co-founder
        </span>
      )
    }

    <!-- Mobile-only social links -->
    <div class="flex justify-center gap-4 mt-3 md:hidden">
      {
        email && (
          <a
            href={`mailto:${email}`}
            class="text-gray-600 hover:text-primary transition-colors"
            aria-label={`Email ${name}`}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
            </svg>
          </a>
        )
      }
      {
        linkedIn && (
          <a
            href={linkedIn}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-primary transition-colors"
            aria-label={`${name}'s linkedIn profile`}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
            </svg>
          </a>
        )
      }
    </div>
  </div>
</div>
