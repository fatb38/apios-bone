---
import ApplicationCard from './ApplicationCard.astro'
import dentalImage from '../../assets/dental-application.jpeg'
import orthopedicsImage from '../../assets/orthopedic-application.jpeg'
import spinalImage from '../../assets/spinal-application.jpeg'
import SectionTitleLayout from '../../layouts/SectionTitleLayout.astro'

const applications = [
  {
    title: 'Dental / Maxilo-facial',
    imageUrl: dentalImage,
    altText: 'Dental and maxilo-facial application'
  },
  {
    title: 'Orthopedics',
    imageUrl: orthopedicsImage,
    altText: 'Orthopedics application'
  },
  {
    title: 'Spinal Fusion',
    imageUrl: spinalImage,
    altText: 'Spinal fusion application'
  }
]
---

<section id="applications" class="py-16 sm:py-20">
  <div class="max-w-7xl mx-auto px-4">
    <SectionTitleLayout
      title="Apios Applications"
      subtitle="Discover how our technology is transforming various medical procedures"
    />
    <div class="grid gap-6 sm:gap-10 sm:grid-cols-2 lg:grid-cols-3">
      {applications.map((application) => <ApplicationCard {...application} />)}
    </div>
  </div>
</section>
