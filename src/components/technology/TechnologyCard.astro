---
interface Props {
  icon: string
  title: string
  description: string
}

const { icon, title, description } = Astro.props
---

<div
  class="bg-white rounded-xl sm:rounded-2xl p-6 sm:p-8 border-2 border-primary/20"
>
  <h3 class="font-roboto font-semibold text-lg sm:text-xl mb-2 sm:mb-4">
    <span class="mr-2 text-2xl">{icon}</span>{title}
  </h3>
  <p class="text-gray-600 text-sm sm:text-base">{description}</p>
</div>
