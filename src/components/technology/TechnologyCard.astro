---
import { type ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

interface Props {
  icon: ImageMetadata
  title: string
  description: string
}

const { icon, title, description } = Astro.props
---

<div
  class="bg-white rounded-xl sm:rounded-2xl p-6 sm:p-8 border-2 border-primary/20 hover:border-primary/50 transition-all"
>
  <div class="flex gap-2 sm:gap-3 items-center mb-2 sm:mb-4">
    <Image src={icon} alt={title} class="w-8 h-8" />
    <h3 class="font-roboto font-semibold text-lg sm:text-xl">
      {title}
    </h3>
  </div>
  <p class="text-gray-600 text-sm sm:text-base">{description}</p>
</div>
