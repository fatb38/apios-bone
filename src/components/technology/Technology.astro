---
import { Image } from 'astro:assets'
import TechnologyCard from './TechnologyCard.astro'
import SectionTitleLayout from '../../layouts/SectionTitleLayout.astro'
import apiosImplantPhoto from '../../assets/apios-implant.jpg'
import osteoInductiveIcon from '../../assets/icons/osteo-inductive-icon.svg'
import osteoConductiveIcon from '../../assets/icons/osteo-conductive-icon.svg'
import customMadeIcon from '../../assets/icons/custom-made-icon.svg'
import readyToUseIcon from '../../assets/icons/ready-to-use-icon.svg'

const features = [
  {
    title: 'Osteo conductive',
    description: 'Scaffold structure promotes bone growth',
    icon: osteoConductiveIcon
  },
  {
    title: 'Osteo inductive',
    description: 'BMP-2 protein coating activates bone repair',
    icon: osteoInductiveIcon
  },
  {
    title: 'Custom made',
    description: '3D printed to match patient needs',
    icon: customMadeIcon
  },
  {
    title: 'Ready to use',
    description: 'Simplified surgical procedure',
    icon: readyToUseIcon
  }
]
---

<section
  id="technology"
  class="py-16 sm:py-20 bg-gradient-to-br from-primary/10 to-primary/5"
>
  <div class="max-w-7xl mx-auto px-4">
    <SectionTitleLayout
      title="Our Innovative Solution"
      subtitle="Advanced 3D bioactive implants that revolutionize bone self-repair"
    />

    <div class="lg:grid lg:grid-cols-3 gap-12 items-start">
      <div class="lg:col-span-2">
        <p class="leading-relaxed mb-6">
          APIOS develops 3D bioactive implants to stimulate bone self-repair.
          The implant is a scaffold made by 3D printing, which allows control
          size, shape, and porosity. It can be custom-made for the patient.
        </p>
        <p class="leading-relaxed">
          Internal and external surfaces are coated with a biomimetic film
          containing an osteo-inductive protein (BMP-2), which activates bone
          repair. The 3D bioactive implant is ready-to-use for the surgeon,
          which simplify the surgical procedure.
        </p>
        <div class="mt-12 lg:mt-6 grid sm:grid-cols-2 gap-6">
          {features.map((feature) => <TechnologyCard {...feature} />)}
        </div>
      </div>
      <Image
        src={apiosImplantPhoto}
        alt="apios-implant"
        class="mt-12 lg:mt-0 relative rounded-2xl shadow-lg w-full object-cover aspect-4/3"
        loading="lazy"
        decoding="sync"
      />
    </div>
  </div>
</section>
