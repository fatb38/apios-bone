---
import { Image } from 'astro:assets'
import SectionTitleLayout from '../layouts/SectionTitleLayout.astro'
import cnrsLogo from '../assets/partners/cnrs-logo.png'
import fondationRechercheLogo from '../assets/partners/fondation-recherche-medicale-logo.jpg'
import grenobleInpLogo from '../assets/partners/grenoble-inp-logo.png'
import grenobleInpEntrepriseLogo from '../assets/partners/grenoble-inp-entreprise-logo.png'
import gueulesCasseesLogo from '../assets/partners/gueules-cassees-logo.png'
import medicalpsLogo from '../assets/partners/medicalps-logo.png'

const partners = [
  { name: 'CNRS', logo: cnrsLogo },
  { name: 'Fondation Recherche Medicale', logo: fondationRechercheLogo },
  { name: 'Grenoble INP', logo: grenobleInpLogo },
  { name: 'Grenoble INP Entreprise', logo: grenobleInpEntrepriseLogo },
  { name: 'Gueules cass√©es', logo: gueulesCasseesLogo },
  { name: 'Medicalps', logo: medicalpsLogo }
]
---

<section class="py-16 sm:py-20">
  <div class="max-w-7xl mx-auto px-4">
    <SectionTitleLayout title="Our Partners" />
    <div
      class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 items-center"
    >
      {
        partners.map((partner) => (
          <div class="flex items-center justify-center p-4">
            <Image
              src={partner.logo}
              alt={`${partner.name} logo`}
              class="max-h-16 sm:max-h-20 w-auto grayscale hover:grayscale-0 transition-all duration-300"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
