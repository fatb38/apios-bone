---
import SectionLayout from '../layouts/SectionLayout.astro'
import ApplicationCard from './ApplicationCard.astro'
import dentalImage from '../assets/dental-application.jpeg'
import orthopedicImage from '../assets/orthopedic-application.jpeg'
import spinalImage from '../assets/spinal-application.png'

const applications = [
  {
    title: 'Dental / Maxilo-facial',
    imageUrl: dentalImage,
    altText: 'Dental and maxilo-facial application'
  },
  {
    title: 'Orthopedic',
    imageUrl: orthopedicImage,
    altText: 'Orthopedic application'
  },
  {
    title: 'Spinal Fusion',
    imageUrl: spinalImage,
    altText: 'Spinal fusion application'
  }
]
---
<SectionLayout backgroundColor="bg-white">
  <h2 class="font-roboto font-bold text-2xl sm:text-4xl text-center mb-3 sm:mb-4">Apios Applications</h2>
  <p class="text-center text-gray-600 max-w-2xl mx-auto mb-8 sm:mb-12 text-sm sm:text-base">
    Discover how our technology is transforming various medical procedures
  </p>
  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {applications.map(application => (
      <ApplicationCard {...application} />
    ))}
  </div>
</SectionLayout>