---
import SectionTitleLayout from '../layouts/SectionTitleLayout.astro'

const contactInfo = {
  company: 'APIOS / Linksium',
  address: {
    street: '31 rue Gustave Eiffel',
    city: '38000 Grenoble',
    country: 'FRANCE'
  },
  email: 'contact@apios-bone.com',
  linkedin: 'https://www.linkedin.com/in/catherine-picart-40801764/'
}
---

<section id="contact" class="py-16 sm:py-20">
  <div class="max-w-7xl mx-auto px-4">
    <SectionTitleLayout title="Contact Us" />
    <div class="max-w-lg mx-auto text-center">
      <p class="font-semibold mb-4">{contactInfo.company}</p>
      <address class="not-italic text-gray-600 mb-4">
        {contactInfo.address.street}<br />
        {contactInfo.address.city}<br />
        {contactInfo.address.country}
      </address>
      <a
        href={`mailto:${contactInfo.email}`}
        class="text-primary hover:text-primary/80 transition-colors block mb-8"
      >
        {contactInfo.email}
      </a>

      <div class="pt-8 border-t border-gray-200">
        <p class="text-gray-600 mb-4">Follow us</p>
        <a
          href={contactInfo.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block text-gray-600 hover:text-primary transition-colors"
          aria-label="Follow us on LinkedIn"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
