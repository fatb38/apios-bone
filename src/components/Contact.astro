---
import SectionTitleLayout from '../layouts/SectionTitleLayout.astro'

const contactInfo = {
  address: {
    street: '31 rue Gustave Eiffel',
    city: '38000 Grenoble',
    country: 'FRANCE'
  },
  email: 'contact@apios-bone.com',
  linkedin: 'https://www.linkedin.com/in/catherine-picart-40801764/'
}
---

<section id="contact" class="pt-16 sm:pt-20 bg-white relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4">
    <SectionTitleLayout title="Contact Us" />

    <div class="max-w-4xl mx-auto space-y-10">
      <h3 class="text-2xl font-semibold text-center">
        APIOS - <a
          href="https://www.linksium.fr/"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-primary transition-colors">Linksium</a
        >
      </h3>

      <div
        class="flex flex-col items-center sm:flex-row sm:justify-around sm:items-start gap-6 pb-16 sm:pb-20 border-b border-gray-200"
      >
        <div class="flex items-start gap-4">
          <a
            href="https://maps.app.goo.gl/S6VBuo5AVgGBfowX9"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="locate us on google map"
          >
            <svg
              class="w-6 h-6 text-primary mt-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </a>
          <address
            class="not-italic text-lg text-gray-600 text-center sm:text-left"
          >
            {contactInfo.address.street}<br />
            {contactInfo.address.city}<br />
            {contactInfo.address.country}
          </address>
        </div>

        <div class="flex flex-col items-center sm:items-start gap-6">
          <div class="flex items-center gap-4">
            <svg
              class="w-6 h-6 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a
              href={`mailto:${contactInfo.email}`}
              class="text-lg text-primary hover:text-primary/80 transition-colors"
            >
              {contactInfo.email}
            </a>
          </div>

          <div class="flex items-center gap-4">
            <svg
              class="w-6 h-6 text-primary"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
            <a
              href={contactInfo.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-lg text-gray-600 hover:text-gray-800 transition-colors"
            >
              LinkedIn
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
