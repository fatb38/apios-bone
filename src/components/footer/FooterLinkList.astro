---
interface Props {
  listLabel: string
  links: Array<{ label: string; href: string }>
}

const { listLabel, links } = Astro.props
---

<div>
  <h4 class="font-roboto font-semibold mb-4">{listLabel}</h4>
  <ul class="space-y-2">
    {
      links.map((link) => (
        <li>
          <a
            href={link.href}
            class="text-gray-400 hover:text-white transition-colors"
          >
            {link.label}
          </a>
        </li>
      ))
    }
  </ul>
</div>
